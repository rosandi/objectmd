# why not like this:
# can be read directly by paramhandler

atom: 
  target fcc 100 16 16 132 aluminum
end

group:
  hot gt 0 0 {x0-10*zml}
  nrb lt inf inf {x0+4*zml}
end

modify:
  hot temperature 1000.0
end

interaction:
  target target eam.aluminum eval border.nrb
#  target projectile pair.ar-pt.zbl
end

cond: verlet border.nrb end
detect: monitor thermo watch.proj watch.adatom end

prerun:
  dump hot hot.dat
  info info.out
end

border.nrb.target nrb
border.nrb.impedance 0.0818213
border.nrb.force 0.143938
border.nrb.layer 10

