
var:
  lc 4.032
  ml {lc/2}
end

create:
  target fcc 100 16 16 132 aluminum
end

group:
  hot gt -inf -inf {z1-10*ml}
  nrb lt inf inf {z0+4*ml}
end

interaction:
  target target eam.aluminum eval nrb
#  target target eam.aluminum
end

cond:
  verlet
  nrb
end

detect:
  monitor
  thermo
end

schedule:
  1.0 hot temperature 1000
end

prerun:
  info info.out
  dump target target.dat
  dump hot hot.dat
  dump nrb nrb.dat
end

dir.output output
dir.binary pomd
comm.arch  2 2 1
comm.refresh 5
dump.field nid
thermo.sample 0.1
boundary.periodic xy
time.max 10.0
monitor.every 10

nrb.target nrb
nrb.impedance 0.0818213
nrb.force 0.143938
nrb.layer 2
